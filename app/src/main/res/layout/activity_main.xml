<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/Result"

        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:gravity="left"
        android:maxLength="15"
        android:background="@android:color/transparent"
        android:padding="7dp"
        android:paddingTop="2dp"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bckspc"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_column="1"
        android:layout_marginBottom="1dp"
        android:layout_row="5"
        
        android:text="DEL"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/buttonstyles"
        android:textColor="#ff4000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_column="2"
        android:layout_row="5"
        android:background="@drawable/buttonstyles"
        android:fontFamily="sans-serif-condensed"
        android:text="c"
        android:textColor="#ff4000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/bckspc"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/bckspc"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="351dp"

        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Result"
        app:layout_constraintVertical_bias="0.983">


        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/buttonstyles"

            android:fontFamily="sans-serif-condensed"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Add"
            android:layout_width="147dp"
            android:layout_height="70dp"
            android:layout_column="6"
            android:layout_row="0"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="+"
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nien"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Point"
            android:layout_width="147dp"
            android:layout_height="70dp"
            android:layout_column="6"
            android:layout_row="2"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="."
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Mul"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Div"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="/"
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Eq"
            android:layout_width="147dp"
            android:layout_height="70dp"
            android:layout_column="6"
            android:layout_row="3"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="="
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Sub"
            android:layout_width="147dp"
            android:layout_height="70dp"
            android:layout_column="6"
            android:layout_row="1"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="-"
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/inr"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="4"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="1/x"
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="4"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="sqrt"
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/leftP"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="4"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text="("
            android:textColor="#0022ff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/rightP"
            android:layout_width="147dp"
            android:layout_height="70dp"
            android:layout_column="6"
            android:layout_row="4"
            android:background="@drawable/buttonstyles"
            android:fontFamily="sans-serif-condensed"
            android:text=")"
            android:textColor="#0022ff"
            android:textSize="30sp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>



